<%- include('partials/header.ejs') %>


<body>

    

        <div class="maincontainer">
        
            <a href="./"><img class="logo" src="https://everafter.pics/images/ea_large_logo_full_blk.png"></a>
        
          
          
    

     <!-- Display error message if it exists -->
     <% if (locals.error) { %>
        <p class="error-message"><%= error %></p>
    <% } %>
    <span class="pagetitle">Signup</span>
    <p class="signup_info">Note: The signup name you choose will determine the URL (web link) that users will send files to. So make it memorable but easy to type.</p>
    <form action="/signup" method="post">
        <label for="username">Username:</label>
        <input type="text" name="username" required class="form-style">
        <br>
        <label for="email">Email:</label>
        <input type="email" name="email" required class="form-style">
        <br>
        <label for="password">Password:</label>
        <input type="password" name="password" required autocomplete="on" class="form-style">
        <br>
        <input type="submit" value="Signup" class="login">
    </form>


    

    </div>



    
</body>
</html>
